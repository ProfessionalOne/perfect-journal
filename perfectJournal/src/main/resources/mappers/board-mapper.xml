<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pj.journal.model.board.BoardDao">
	<select id="selectAllBoard" resultType="boardBean">
		select * from posts order by created_at desc
	</select>
	<update id="insertOneBoard" parameterType="boardBean">
		insert (title, image, content) into posts values (#{title},#{image},#{content})
	</update>
	<select id="selectOneBoard" parameterType="int" resultType="boardBean">
		select * from posts where post_id=#{val}
	</select>
	<update id="updatetOneBoard" parameterType="boardBean">
		update posts set title=#{title}, image=#{image}, content=#{content}, updated_at=now() where post_id=#{val}
	</update>
	<delete id="deleteOneBoard" parameterType="Integer">
		delete from posts where post_id=#{val}
	</delete>

</mapper>
